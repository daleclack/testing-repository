                //"-I/usr/include/uuid",
                
                //Manjaro linux and Arch linux include args

                "-I${workspaceFolder}",
                "-I${workspaceFolder}/../",
                
                "-I/usr/lib/glib-2.0/include",
                "-I/usr/lib/dbus-1.0/include",
                "-I/usr/include/lzo",
                "-I/usr/include/cloudproviders",
                
