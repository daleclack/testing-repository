                "-I/usr/include/glibmm-2.4",
                "-I/usr/include/sigc++-2.0",
                "-I/usr/include/cairomm-1.0",
                "-I/usr/include/pangomm-1.4",
                "-I/usr/include/atkmm-1.6",
                "-I/usr/include/gtk-3.0/unix-print",
                "-I/usr/include/gdkmm-3.0",
                

